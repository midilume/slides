    <script>
        document.addEventListener('DOMContentLoaded', function() {
            // Intro animada LC
            const introAnim = document.getElementById('introAnim');
            const introLogo = document.getElementById('introLogo');
            const introTitle = document.getElementById('introTitle');
            const mainContent = document.getElementById('mainContent');

            // Efeito typewriter para "LarConnect"
            const fullText = 'LarConnect';
            let typeIndex = 0;

            function typeWriter() {
                if (typeIndex === 0) {
                    introTitle.style.opacity = 1;
                }
                if (typeIndex < fullText.length) {
                    introTitle.textContent = fullText.substring(0, typeIndex + 1);
                    introTitle.style.borderRight = '2px solid #fff';
                    typeIndex++;
                    setTimeout(typeWriter, 90);
                } else {
                    introTitle.textContent = fullText;
                    introTitle.style.borderRight = 'none';
                }
            }

            // Sequência da animação
            setTimeout(() => {
                // Inicia typewriter
                typeWriter();
            }, 1200); // após logo aparecer

            setTimeout(() => {
                // Brilho azul claro na logo
                introLogo.classList.add('shine');
            }, 2200);

            setTimeout(() => {
                // Remove brilho
                introLogo.classList.remove('shine');
            }, 3400);

            setTimeout(() => {
                // Fade-out da intro
                introAnim.classList.add('hide');
                setTimeout(() => {
                    introAnim.style.display = 'none';
                    mainContent.style.display = '';
                }, 700);
            }, 4100);

            // Slides (mantém igual)
            const slides = document.querySelectorAll('.slide');
            const navButtons = document.querySelectorAll('.nav-btn');
            let currentSlide = 0;

            function animateChartBars() {
                const bars = document.querySelectorAll('.slide.active .chart-bar');
                bars.forEach(bar => {
                    const height = bar.getAttribute('data-final-height') || bar.style.height;
                    bar.style.height = '0';
                    setTimeout(() => {
                        bar.style.height = height;
                    }, 300);
                });
            }

            document.querySelectorAll('.chart-bar').forEach(bar => {
                bar.setAttribute('data-final-height', bar.style.height);
            });

            function showSlide(index) {
                slides.forEach(slide => slide.classList.remove('active'));
                navButtons.forEach(btn => btn.classList.remove('active'));
                slides[index].classList.add('active');
                navButtons[index].classList.add('active');
                currentSlide = index;
                setTimeout(() => {
                    animateChartBars();
                }, 200);
            }

            setTimeout(() => {
                animateChartBars();
            }, 200);

            navButtons.forEach((button, index) => {
                button.addEventListener('click', () => {
                    showSlide(index);
                });
            });

            document.addEventListener('keydown', (e) => {
                if (e.key === 'ArrowRight' && currentSlide < slides.length - 1) {
                    showSlide(currentSlide + 1);
                } else if (e.key === 'ArrowLeft' && currentSlide > 0) {
                    showSlide(currentSlide - 1);
                }
            });

            let touchStartX = 0;
            let touchEndX = 0;

            document.querySelector('.powerpoint-container').addEventListener('touchstart', e => {
                touchStartX = e.changedTouches[0].screenX;
            }, false);

            document.querySelector('.powerpoint-container').addEventListener('touchend', e => {
                touchEndX = e.changedTouches[0].screenX;
                handleSwipe();
            }, false);

            function handleSwipe() {
                if (touchEndX < touchStartX && currentSlide < slides.length - 1) {
                    showSlide(currentSlide + 1);
                }
                if (touchEndX > touchStartX && currentSlide > 0) {
                    showSlide(currentSlide - 1);
                }
            }
        });
    </script>
</body>
</html>
